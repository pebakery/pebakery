                                        Height="25"
                                        Command="{Binding ExtractFolderCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Export"
                                                                    Width="Auto" Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Extract Folder"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <!-- File Management -->
                        <StackPanel Margin="0, 0, 0, 10">
                            <TextBlock Margin="0, 0, 0, 5"
                                       FontWeight="Bold"
                                       FontSize="13"
                                       Text="File Management"/>
                            <Separator Margin="0, 0, 0, 5"
                                       SnapsToDevicePixels="True"
                                       BorderBrush="Black"
                                       BorderThickness="2"/>
                            <StackPanel Margin="3, 0, 3, 0">
                                <Button x:Name="AttachFileButton"
                                        Margin="0, 0, 0, 5"
                                        Height="25"
                                        Command="{Binding AttachFileCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Plus"
                                                                    Width="Auto" Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Attach File"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="DeleteFileButton"
                                        Margin="0, 0, 0, 5"
                                        Height="25"
                                        Command="{Binding DeleteFileCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Close"
                                                                    Width="Auto" Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Delete File"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="RenameFileButton"
                                        Margin="0, 0, 0, 5"
                                        Height="25"
                                        Command="{Binding RenameFileCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Pencil"
                                                                    Width="Auto" Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Rename File"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="ExtractFileButton"
                                        Margin="0, 0, 0, 5"
                                        Height="25"
                                        Command="{Binding ExtractFileCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Export"
                                                                    Width="Auto" Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Extract File"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="OpenFileButton"
                                        Margin="0, 0, 0, 5"
                                        Height="25"
                                        Command="{Binding OpenFileCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="OpenInNew"
                                                                    Width="Auto" Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Open File"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="InspectFileButton"
                                        Height="25"
                                        Command="{Binding InspectFileCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Magnify"
                                                                    Width="Auto" Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Inspect File"
                                                   VerticalAlignment="Center"
                                                   ToolTip="Inspect large file to analyze compression method."/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <!-- Advanced View -->
                        <DockPanel Margin="0, 0, 0, 10"
                                   ToolTip="Show script resources. (Expert users only!)">
                            <CheckBox DockPanel.Dock="Right"
                                      VerticalAlignment="Bottom"
                                      Command="{Binding EnableAdvancedViewCommand}"
                                      IsChecked="{Binding AttachAdvancedViewEnabled}"/>
                            <TextBlock DockPanel.Dock="Left"
                                       FontWeight="Bold"
                                       FontSize="13"
                                       Text="Advanced View"/>
                        </DockPanel>
                    </StackPanel>
                    <!-- List of Folders -->
                    <ListView Grid.Row="0" Grid.Column="1"
                              x:Name="ScriptAttachFoldersListView"
                              ItemsSource="{Binding AttachedFolders}"
                              SelectedItem="{Binding SelectedAttachedFolder}"
                              ItemContainerStyle="{StaticResource AlternativeListViewColor}"
                              Style="{StaticResource ListItemFocusColorOverride}"
                              AlternationCount="2">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <!-- Add Folder -->
                                <cc:CorrectMenuItem Header="Add Folder" 
                                                Command="{Binding AddFolderCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Plus"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <!-- Delete Folder -->
                                <cc:CorrectMenuItem Header="Delete Folder" 
                                                Command="{Binding DeleteFolderCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Close"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <!-- Rename Folder -->
                                <cc:CorrectMenuItem Header="Rename Folder" 
                                                Command="{Binding RenameFolderCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Pencil"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <Separator></Separator>
                                <!-- Extract Folder -->
                                <cc:CorrectMenuItem Header="Extract Folder" 
                                                Command="{Binding ExtractFolderCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Export"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="FolderName"
                                                Width="150"
                                                DisplayMemberBinding="{Binding FolderName}"/>
                                <GridViewColumn Header="Files"
                                                Width="40"
                                                DisplayMemberBinding="{Binding FileCount}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!-- List of Files -->
                    <ListView Grid.Row="0" Grid.Column="2"
                              x:Name="ScriptAttachFilesListView"
                              ItemsSource="{Binding AttachedFiles}"
                              ItemContainerStyle="{StaticResource MultiSelectAlternativeListViewColor}"
                              Style="{StaticResource ListItemFocusColorOverride}"
                              AlternationCount="2"
                              SelectionMode="Extended">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <!-- Attach File -->
                                <cc:CorrectMenuItem Header="Attach File" 
                                                Command="{Binding AttachFileCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Plus"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <!-- Delete File -->
                                <cc:CorrectMenuItem Header="Delete File" 
                                                Command="{Binding DeleteFileCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Close"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <!-- Rename File -->
                                <cc:CorrectMenuItem Header="Rename File" 
                                                Command="{Binding RenameFileCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Pencil"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <Separator></Separator>
                                <!-- Extract File -->
                                <cc:CorrectMenuItem Header="Extract File" 
                                                Command="{Binding ExtractFileCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Export"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <!-- Open File -->
                                <cc:CorrectMenuItem Header="Open File" 
                                                Command="{Binding OpenFileCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="OpenInNew"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                                <Separator></Separator>
                                <!-- Inspect File -->
                                <cc:CorrectMenuItem Header="Inspect File" 
                                                Command="{Binding InspectFileCommand}">
                                    <cc:CorrectMenuItem.Icon>
                                        <iconPacks:PackIconMaterial Kind="Magnify"/>
                                    </cc:CorrectMenuItem.Icon>
                                </cc:CorrectMenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="FileName"
                                                Width="200"
                                                DisplayMemberBinding="{Binding FileName}"/>
                                <GridViewColumn Header="Raw Size"
                                                Width="100"
                                                DisplayMemberBinding="{Binding RawSize}"/>
                                <GridViewColumn Header="Encoded Size"
                                                Width="100"
                                                DisplayMemberBinding="{Binding EncodedSize}"/>
                                <GridViewColumn Header="Compression"
                                                Width="90"
                                                DisplayMemberBinding="{Binding Compression}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!-- Progress Bar -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Margin="0, 0, 10, 0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding AttachProgressValue, Converter={StaticResource AttachProgressValueToPercentConverter}}"/>
                    <ProgressBar Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                 Maximum="1"
                                 Value="{Binding AttachProgressValue}"
                                 IsIndeterminate="{Binding AttachProgressIndeterminate}"
                                 IsEnabled="{Binding AttachProgressValue, Converter={StaticResource AttachProgressValueToEnabledConverter}}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Margin="15, 15, 15, 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="1"
                    Margin="10, 0, 0, 0"
                    IsCancel="True"
                    IsEnabled="{Binding CanExecuteCommand}"
                    Content="Close"/>
        </Grid>
    </Grid>
</Window>
