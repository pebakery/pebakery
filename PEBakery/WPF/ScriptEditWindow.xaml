<!-- ReSharper disable InconsistentNaming -->
<Window x:Class="PEBakery.WPF.ScriptEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEBakery.WPF"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:cc="clr-namespace:PEBakery.WPF.Controls"
        xmlns:ccc="clr-namespace:PEBakery.Core.WpfControls;assembly=PEBakery.Core"
        mc:Ignorable="d"
        Title="Edit Script"
        FontFamily="Segoe UI"
        FontSize="13"
        Closing="Window_Closing"
        Closed="Window_Closed"
        Width="900" Height="720"
        MinWidth="600" MinHeight="480"
        Icon="/Resources/Donut.ico"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown"
        d:DataContext="{d:DesignInstance Type=local:ScriptEditViewModel}">
    <Window.CommandBindings>
        <CommandBinding Command="local:ScriptEditCommands.Save"
                        CanExecute="SaveCommand_CanExecute"
                        Executed="SaveCommand_Execute"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="{Binding UICtrlReloadCommand}" Key="R" Modifiers="Ctrl"/>
    </Window.InputBindings>
    <Window.Resources>
        <local:ScriptLogoVisibilityConverter x:Key="ScriptLogoVisibilityConverter"/>
        <local:AttachProgressValueToPercentConverter x:Key="AttachProgressValueToPercentConverter" />
        <local:AttachProgressValueToEnabledConverter x:Key="AttachProgressValueToEnabledConverter" />
        <local:ColorToSolidColorBrushConverter x:Key="ColorToSolidColorBrushConverter"/>
        <local:ActiveInterfaceSectionVisibilityConverter x:Key="ActiveInterfaceSectionVisibilityConverter"/>
        <local:StringEscapeConverter x:Key="StringEscapeConverter" />
        <Style x:Key="MultiSelectAlternativeListViewColor" BasedOn="{StaticResource AlternativeListViewColor}" TargetType="{x:Type ListViewItem}">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                    <Setter Property="TextBlock.Foreground" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="TextBlock.Foreground" Value="Black"/>
                    <Setter Property="Background" Value="#f2f2f2"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
        </Style>
    </Window.Resources>
    <Grid ccc:SelectTextOnFocus.Active="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0"
                    Background="White"
                    SelectedIndex="{Binding TabIndex}"
                    SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="General" 
                     IsEnabled="{Binding CanExecuteCommand}"
                     Width="120">
                <StackPanel Margin="10, 0, 10, 10">
                    <TextBlock Margin="0, 10, 0, 5"
                               FontWeight="Bold"
                               FontSize="13"
                               Text="Header"/>
                    <Separator Margin="0, 0, 0, 5"
                               SnapsToDevicePixels="True"
                               BorderBrush="Black"
                               BorderThickness="2"/>
                    <Grid Margin="5, 0, 5, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="130"/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>

                        <!-- Main Description -->
                        <Grid Grid.Row="0"
                              Margin="5, 0, 5, 5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Title -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Margin="0, 0, 5, 0"
                                       Text="Title"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     VerticalAlignment="Center"
                                     Text="{Binding ScriptTitle}"/>

                            <!-- Author -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Margin="0, 0, 5, 0"
                                       Text="Author"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     VerticalAlignment="Center"
                                     Text="{Binding ScriptAuthor}"/>

                            <!-- Description -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Margin="0, 0, 5, 0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="Description"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Grid.RowSpan="3"
                                     Height="70"
                                     Text="{Binding ScriptDescription, Mode=TwoWay}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalAlignment="Center"/>

                            <!-- Version -->
                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       Margin="0, 0, 5, 0"
                                       Text="Version"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBox Grid.Row="0" Grid.Column="3"
                                     VerticalAlignment="Center"
                                     Text="{Binding ScriptVersion}"/>

                            <!-- Date -->
                            <TextBlock Grid.Row="1" Grid.Column="2"
                                       Margin="0, 0, 5, 0"
                                       Text="Date"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBox Grid.Row="1" Grid.Column="3"
                                     VerticalAlignment="Center"
                                     Text="{Binding ScriptDate}"/>

                            <!-- Level -->
                            <TextBlock Grid.Row="2" Grid.Column="2"
                                       Margin="0, 0, 5, 0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="Level"/>
                            <ccc:NumberBox Grid.Row="2" Grid.Column="3"
                                           x:Name="ScriptLevel"
                                           VerticalAlignment="Center"
                                           Minimum="-256"
                                           Maximum="255"
                                           IncrementUnit="1"
                                           Value="{Binding ScriptLevel, Mode=TwoWay}"/>

                            <!-- Selected -->
                            <TextBlock Grid.Row="3" Grid.Column="2"
                                       Margin="0, 0, 5, 0"
                                       Text="Selected"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <CheckBox Grid.Row="3" Grid.Column="3"
                                      IsThreeState="True"
                                      IsChecked="{Binding ScriptSelected}"
                                      VerticalAlignment="Center"/>
                            <!-- Mandatory -->
                            <TextBlock Grid.Row="4" Grid.Column="2"
                                       Margin="0, 0, 5, 0"
                                       Text="Mandatory"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <CheckBox Grid.Row="4" Grid.Column="3" 
                                      IsChecked="{Binding ScriptMandatory}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                        <Button Grid.Row="1"
                                Width="100"
                                Content="Save"
                                x:Name="MainSaveButton"
                                Command="local:ScriptEditCommands.Save"
                                HorizontalAlignment="Right"/>
                    </Grid>

                    <TextBlock Margin="0, 10, 0, 5"
                               FontWeight="Bold"
                               FontSize="13"
                               Text="Logo"/>
                    <Separator Margin="0, 0, 0, 5"
                               SnapsToDevicePixels="True"
                               BorderBrush="Black"
                               BorderThickness="2"/>
                    <Grid Height="100"
                          Margin="5, 0, 5, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Script Logo -->
                        <Border Grid.Row="0" Grid.Column="0"
                                Background="{Binding ScriptPanelBackground, Converter={StaticResource ColorToSolidColorBrushConverter}, FallbackValue=#FFE0E0E0}"/>
                        <Image x:Name="ScriptLogoImage"
                               Grid.Row="0" Grid.Column="0"
                               Width="90" Height="90"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               StretchDirection="DownOnly"
                               Stretch="Uniform"
                               UseLayoutRounding="True"
                               Visibility="{Binding ScriptLogoImage, Converter={StaticResource ScriptLogoVisibilityConverter}}"
                               Source="{Binding ScriptLogoImage}"
                               ToolTip="Recommended image size : 80x80"/>
                        <iconPacks:PackIconMaterial x:Name="ScriptLogoIcon"
                                                    Grid.Row="0" Grid.Column="0"
                                                    Width="60" Height="60"
                                                    Foreground="#60000000"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    UseLayoutRounding="True"
                                                    Visibility="{Binding ScriptLogoIcon, Converter={StaticResource ScriptLogoVisibilityConverter}}"
                                                    Kind="{Binding ScriptLogoIcon}"
                                                    ToolTip="Recommended image size : 80x80"/>
                        <Border x:Name="ScriptLogoSvg"
                                Grid.Row="0" Grid.Column="0"
                                Width="{Binding ScriptLogoSvgWidth}"
                                Height="{Binding ScriptLogoSvgHeight}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                UseLayoutRounding="True"
                                Visibility="{Binding ScriptLogoSvg, Converter={StaticResource ScriptLogoVisibilityConverter}}"
                                Background="{Binding ScriptLogoSvg}"/>
                        <Grid Grid.Row="0" Grid.Column="1"
                              Height="80"
                              Visibility="{Binding ScriptLogoInfoVisibility}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Name -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Margin="0, 0, 10, 0"
                                       Text="Name"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Text="{Binding ScriptLogoName}"/>

                            <!-- Raw Size -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Margin="0, 0, 10, 0"
                                       Text="Raw Size"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Text="{Binding ScriptLogoRawSize}"/>

                            <!-- Encoded Size -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Margin="0, 0, 10, 0"
                                       Text="Encoded Size"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Text="{Binding ScriptLogoEncodedSize}"/>

                            <!-- Compression -->
                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Margin="0, 0, 10, 0"
                                       Text="Compression"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Text="{Binding ScriptLogoCompression}"/>
                        </Grid>
                        <StackPanel Grid.Row="0" Grid.Column="2"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center">
                            <Button Width="100" Height="25"
                                    Margin="0, 0, 0, 5"
                                    x:Name="ScriptLogoAttachButton"
                                    Command="{Binding ScriptLogoAttachCommand}"
                                    ToolTip="Import logo from image">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="ArrowExpandLeft"
                                                                Width="Auto"
                                                                Height="Auto"
                                                                Margin="0, 5, 5, 5"/>
                                    <TextBlock Text="Import"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Width="100" Height="25"
                                    Margin="0, 0, 0, 5"
                                    x:Name="ScriptLogoExtractButton"
                                    Command="{Binding ScriptLogoExtractCommand}"
                                    ToolTip="Export logo to image">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="ArrowExpandRight"
                                                                Width="Auto"
                                                                Height="Auto"
                                                                Margin="0, 5, 5, 5"/>
                                    <TextBlock Text="Extract"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Width="100" Height="25"
                                    x:Name="ScriptLogoDeleteButton"
                                    Command="{Binding ScriptLogoDeleteCommand}"
                                    ToolTip="Delete logo">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Close"
                                                                Width="Auto"
                                                                Height="Auto"
                                                                Margin="0, 5, 5, 5"/>
                                    <TextBlock Text="Delete"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Interface" 
                     IsEnabled="{Binding CanExecuteCommand}"
                     Width="120">
                <Grid Margin="10, 10, 10, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Margin="0, 0, 10, 0">
                        <StackPanel Margin="0, 0, 0, 10">
                            <TextBlock Margin="0, 0, 0, 5"
                                       FontWeight="Bold"
                                       FontSize="13"
                                       Text="Interface Section"/>
                            <Separator Margin="0, 0, 0, 5"
                                       SnapsToDevicePixels="True"
                                       BorderBrush="Black"
                                       BorderThickness="2"/>
                            <Grid Margin="3, 0, 3, 0" Height="25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0" 
                                          x:Name="ActiveSectionComboBox" 
                                          VerticalContentAlignment="Center"
                                          ItemsSource="{Binding InterfaceSectionNames}"
                                          SelectedItem="{Binding SelectedInterfaceSectionName}"
                                          SelectionChanged="ActiveSectionComboBox_SelectionChanged"/>
                                <Button Grid.Column="1"
                                        Margin="5, 0, 0, 0"
                                        x:Name="InterfaceSectionAddButton"
                                        Command="{Binding InterfaceSectionAddCommand}"
                                        ToolTip="Add Interface">
                                    <iconPacks:PackIconMaterial Kind="Plus" Width="Auto" Height="Auto" Margin="5"/>
                                </Button>
                                <Button Grid.Column="2"
                                        Margin="5, 0, 0, 0"
                                        x:Name="InterfaceSectionDeleteButton"
                                        Command="{Binding InterfaceSectionDeleteCommand}"
                                        ToolTip="Delete Interface">
                                    <iconPacks:PackIconMaterial Kind="Minus" Width="Auto" Height="Auto" Margin="5"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <StackPanel Margin="0, 0, 0, 10">
                            <TextBlock Margin="0, 0, 0, 5"
                                       FontWeight="Bold"
                                       FontSize="13"
                                       Text="Add Control"/>
                            <Separator Margin="0, 0, 0, 5"
                                       SnapsToDevicePixels="True"
                                       BorderBrush="Black"
                                       BorderThickness="2"/>
                            <Grid Margin="3, 0, 3, 0" Height="25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                          VerticalContentAlignment="Center"
                                          x:Name="UICtrlAddComboBox"
                                          SelectedIndex="{Binding UICtrlAddTypeIndex}"
                                          ItemsSource="{Binding UICtrlAddTypeSource, Mode=OneWay}"/>
                                <Button Grid.Column="1"
                                        Margin="5, 0, 0, 0"
                                        x:Name="UICtrlAddButton"
                                        Command="{Binding UICtrlAddCommand}"
                                        ToolTip="Add UIControl">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Plus" Width="Auto" Height="Auto" Margin="5"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Margin="0, 0, 0, 5"
                                       FontWeight="Bold"
                                       FontSize="13"
                                       Text="Edit Control"/>
                            <Separator Margin="0, 0, 0, 5"
                                       SnapsToDevicePixels="True"
                                       BorderBrush="Black"
                                       BorderThickness="2"/>
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="3, 0, 3, 0" Orientation="Vertical">
                                    <!-- Edit UIControl Selection -->
                                    <Grid Height="25">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- UIControl Selection -->
                                        <ComboBox Grid.Column="0"
                                            IsEnabled="{Binding InterfaceLoaded}"
                                            SelectedIndex="{Binding InterfaceUICtrlIndex}"
                                            ItemsSource="{Binding InterfaceUICtrls}"
                                            SelectionChanged="UIControlComboBox_SelectionChanged"/>
                                        <!-- UIControl Delete -->
                                        <Button Grid.Column="1"
                                            Margin="5, 0, 0, 0"
                                            HorizontalAlignment="Right"
                                            x:Name="UICtrlDeleteButton"
                                            Command="{Binding UICtrlDeleteCommand}"
                                            ToolTip="Delete UIControl">
                                            <iconPacks:PackIconMaterial Kind="Minus" Width="Auto" Height="Auto" Margin="5"/>
                                        </Button>
                                    </Grid>

                                    <!-- Common -->
                                    <Grid Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>

                                        <!-- General Properties -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Type" />
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 IsReadOnly="True"
                                                 IsEnabled="{Binding UICtrlEditEnabled}"
                                                 Text="{Binding UICtrlType, Mode=OneWay}" />
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Visible" />
                                        <CheckBox Grid.Row="1" Grid.Column="1"
                                                  VerticalContentAlignment="Center"
                                                  IsEnabled="{Binding UICtrlEditEnabled}"
                                                  IsChecked="{Binding UICtrlVisible}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="X" />
                                        <ccc:NumberBox Grid.Row="2" Grid.Column="1"
                                                          VerticalContentAlignment="Center"
                                                          FontSize="11"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Y"/>
                                        <ccc:NumberBox Grid.Row="3" Grid.Column="1"
                                                          VerticalContentAlignment="Center"
                                                          FontSize="11"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="4" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Width"/>
                                        <ccc:NumberBox Grid.Row="4" Grid.Column="1"
                                                          VerticalContentAlignment="Center"
                                                          FontSize="11"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="5" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Height" />
                                        <ccc:NumberBox Grid.Row="5" Grid.Column="1"
                                                          VerticalContentAlignment="Center"
                                                          FontSize="11"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="6" Grid.Column="0"
                                                   Margin="0,1,5,0"
                                                   Text="ToolTip" />
                                        <TextBox Grid.Row="6" Grid.Column="1"
                                                 VerticalContentAlignment="Center"
                                                 AcceptsReturn="True"
                                                 FontSize="11"
                                                 IsEnabled="{Binding UICtrlEditEnabled}"
                                                 Text="{Binding UICtrlToolTip, Converter={StaticResource StringEscapeConverter}, UpdateSourceTrigger=PropertyChanged}" Margin="0,1,0,0"/>
                                    </Grid>
                                    <!-- TextBox -->
                                    <Grid Visibility="{Binding IsUICtrlTextBox}" Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Caption" />
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 FontSize="11"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding UICtrlText, Converter={StaticResource StringEscapeConverter}, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0,1,5,0"
                                                   Text="Value" />
                                        <TextBox Grid.Row="1" Grid.Column="1"
                                                 FontSize="11"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding UICtrlTextBoxValue, Converter={StaticResource StringEscapeConverter}, UpdateSourceTrigger=PropertyChanged}" Margin="0,1,0,0"/>
                                    </Grid>
                                    <!-- TextLabel -->
                                    <Grid Visibility="{Binding IsUICtrlTextLabel}" Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Caption" />
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 FontSize="11"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding UICtrlText, Converter={StaticResource StringEscapeConverter}, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="FontSize" />
                                        <ccc:NumberBox Grid.Row="1" Grid.Column="1"
                                                          VerticalContentAlignment="Center"
                                                          FontSize="11"
                                                          Minimum="0"
                                                          IncrementUnit="1"
                                                          Value="{Binding UICtrlTextLabelFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Margin="0,1,5,0"
                                                   Text="Weight" />
                                        <ComboBox Grid.Row="2" Grid.Column="1"
                                                  Padding="3, 0, 3, 0"
                                                  VerticalContentAlignment="Center"
                                                  FontSize="11"
                                                  SelectedIndex="{Binding UICtrlTextLabelFontWeightIndex, UpdateSourceTrigger=PropertyChanged}" Margin="0,1,0,0">
                                            <ComboBoxItem Content="Normal"/>
                                            <ComboBoxItem Content="Bold"/>
                                        </ComboBox>
                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Margin="0,1,5,0"
                                                   Text="Style" />
                                        <ComboBox Grid.Row="3" Grid.Column="1"
                                                  Padding="3, 0, 3, 0"
                                                  VerticalContentAlignment="Center"
                                                  FontSize="11"
                                                  SelectedIndex="{Binding UICtrlTextLabelFontStyleIndex, UpdateSourceTrigger=PropertyChanged}" Margin="0,1,0,0">
                                            <ComboBoxItem Content="None"/>
                                            <ComboBoxItem Content="Italic"/>
                                            <ComboBoxItem Content="Underline"/>
                                            <ComboBoxItem Content="Strike"/>
                                        </ComboBox>
                                    </Grid>
                                    <!-- NumberBox -->
